<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vector.VectorResult"
    android:orientation="vertical"
    android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/vectorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안구 체크 결과 \n2가지의 이상징후가 있어요!"
            android:fontFamily="@font/nanumsquareeb"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                        android:background="#FD9374"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/vectorSubT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nanumsquareeb"
                            android:text="몽이의 눈은 꼼꼼한 관리가 필요해요!"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/vectorCheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="11dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/text_item2"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="증상결과에 표시된 %수치는 AI 분석을 통한 \n증상이 있을 확률로 아래와 같이 구분해 제공하고 있습니다."
                            android:textSize="14dp"
                            android:textColor="#8E8E8F"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:background="@color/blue"/>
                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.4"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:background="@color/yellow"/>
                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:background="@color/pink"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="50%"
                                    android:gravity="right"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.4"
                                    android:text="85%"
                                    android:gravity="right"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:text="100%"
                                    android:gravity="right"/>
                        </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/resultLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4AC8C8C8"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vectorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="진단 결과"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <ProgressBar
                        android:id="@+id/vectorResultPro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
<!--                            android:rotation="270"-->
<!--                            android:progress="0"-->
<!--                            android:max="100"-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="진단 내용"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/vectorContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="내용~"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/resultLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4AC8C8C8"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/vectorName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="진단 결과"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <ProgressBar
                            android:id="@+id/vectorResultPro2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                        <!--                            android:rotation="270"-->
                        <!--                            android:progress="0"-->
                        <!--                            android:max="100"-->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:text="진단 내용"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/vectorContent2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="내용~"
                            android:textSize="12dp"
                            android:textColor="@color/black"/>
                </LinearLayout>

                <Button
                    android:id="@+id/goBooks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/white"
                    android:text="질병 백과\n바로가기"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                        <Button
                            android:id="@+id/storeVector"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:backgroundTint="#FD9374"
                            android:gravity="center"
                            android:text="진단 결과 저장"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                </LinearLayout>
</LinearLayout>
</ScrollView>