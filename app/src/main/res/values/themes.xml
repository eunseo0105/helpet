<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">#7B7A7C</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <!--    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">-->

    <!--        <item name="windowNoTitle">true</item>&ndash;&gt;-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--    </style>-->


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>